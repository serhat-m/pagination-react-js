{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignore": ["node_modules", "dist", "build", "package.json"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "double",
      "semicolons": "asNeeded",
      "trailingCommas": "all",
      "lineWidth": 150
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error",
        "noUnusedFunctionParameters": "error"
      },
      "style": {
        "useConst": "error",
        "useImportType": "error",
        "useExportType": "error",
        "noNamespace": "off",
        "noDefaultExport": "off"
      },
      "suspicious": {
        "noEmptyInterface": "off",
        "useAwait": "error",
        "noRedeclare": "error",
        "noExportsInTest": "error",
        "noDuplicateParameters": "error",
        "noDuplicateTestHooks": "error"
      },
      "complexity": {
        "noForEach": "off",
        "noBannedTypes": "off",
        "useOptionalChain": "error"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
